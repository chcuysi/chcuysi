<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PsaleMenuDao">

	<!--판매자회원 메뉴 보이기
		1. 판매자회원 메뉴에 필요한 정보들 select
		2. INNER JOIN 사용 -->
   <select id="getPsaleMenuList" resultType="vo.PsaleMenuVO" parameterType="hashmap" >
      	select pnum, pid, paddr, pdaddr, ptel, pemail, pdate, pout, poutwhy
		FROM psale
   </select>  
   <!--판매자회원 메뉴 수정하기
   		1. 판매자회원 메뉴 중에서 수정할 것들 SET
   		2. 선택한 것의 판매자회원번호에 해당하는 것만 UPDATE -->
   	<update	id='updatePsaleMenu' parameterType="vo.PsaleMenuVO">
		UPDATE psale SET pout=#{pout}, poutwhy=#{poutwhy} WHERE pnum=#{pnum}
	</update>
</mapper>