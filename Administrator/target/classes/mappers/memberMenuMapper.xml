<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberMenuDao">

	<!--일반회원 메뉴 보이기
		1. 일반회원 메뉴에 필요한 정보들 select
		2. INNER JOIN 사용
		-->
   <select id="getMemberMenuList" resultType="vo.MemberMenuVO" parameterType="hashmap" >
      	select mnum, mid, maddr, mdaddr, mtel, memail, mdate, mout, moutwhy
		FROM member
   </select>
   
   <!-- 일반회원 메뉴 수정하기
   		1. 일반회원 메뉴 중에서 수정할 것들 SET
   		2. 선택한 것의 회원번호에 해당하는 것만 UPDATE -->  
   	<update	id='updateMemberMenu' parameterType="vo.MemberMenuVO">
		UPDATE member SET mout=#{mout}, moutwhy=#{moutwhy} WHERE mnum=#{mnum}
	</update>
   
</mapper>